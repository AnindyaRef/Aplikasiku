<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anindya.aplikasiku">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/icon_logo_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SignUp2Activity"
            android:label="SIGN UP"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".AddActivity"
            android:label="ADD LIST STUFF"
            android:parentActivityName=".StuffActivity"
            />
        <activity
            android:name=".StuffActivity"
            android:label="MY LIST STUFF"
            android:parentActivityName=".HomeActivity"/>
        <activity
            android:name=".ScheduleActivity"
            android:label="SCHEDULE CONCERT"
            android:parentActivityName=".HomeActivity"/>
        <activity
            android:name=".HomeActivity"
            android:label="HOME MENU"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".MainActivity"
            android:label="LOGIN">
        </activity>
        <activity
            android:name=".splashscreen"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>